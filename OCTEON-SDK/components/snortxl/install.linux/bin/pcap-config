#! /bin/sh

#
# Script to give the appropriate compiler flags and linker flags
# to use when building code that uses libpcap.
#
case "$1" in

--cflags)
	echo "-I /usr/sdk23/OCTEON-SDK/components/snortxl_tag/install/include"
	;;

--libs)
	echo "-L /usr/sdk23/OCTEON-SDK/components/snortxl_tag/install/lib -lpcap "
	;;
esac
